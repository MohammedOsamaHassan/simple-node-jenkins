pipeline {
    agent any
 
    environment {
        SERVER_IP = credentials('SERVER_IP')
    }

    stages {
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy to Ubuntu Server') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'SERVER_USER', keyFileVariable: 'MY_SSH_KEY', usernameVariable: 'SERVER_USER')]) {
                    sh '''
                        scp -i MY_SSH_KEY $ -o StrictHostKeyChecking=no backend/target/*.jar ${SERVER_USER}@${SERVER_IP}:/opt/app/app.jar
                        scp -i MY_SSH_KEY -r -o StrictHostKeyChecking=no frontend/build/* ${SERVER_USER}@${SERVER_IP}:/var/www/html/
                        ssh -i MY_SSH_KEY -o StrictHostKeyChecking=no ${SERVER_USER}@${SERVER_IP} 'sudo systemctl restart apache2'
                    '''
                }
            }
        }
    }
}