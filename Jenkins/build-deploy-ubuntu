pipeline {
    agent any
 
    environment {
        SERVER_IP = '127.0.0.1'
        SERVER_USER = 'ahmed'
        SERVER_PASSWORD = credentials('SERVER_PASSWORD')
    }

    stages {
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy to Ubuntu Server') {
            steps {
                sh """
                    scp -p $SERVER_PASSWORD -o StrictHostKeyChecking=no backend/target/*.jar ${SERVER_USER}@${SERVER_IP}:/opt/app/
                    scp -p $SERVER_PASSWORD -r -o StrictHostKeyChecking=no frontend/build/* ${SERVER_USER}@${SERVER_IP}:/var/www/html/
                    ssh -p $SERVER_PASSWORD -o StrictHostKeyChecking=no ${SERVER_USER}@${SERVER_IP} 'sudo systemctl restart apache2'
                """
            }
        }
    }
}