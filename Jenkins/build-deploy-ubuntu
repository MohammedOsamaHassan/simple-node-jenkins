pipeline {
    agent any
 
    environment {
        SERVER_IP = credentials('SERVER_IP')
        SERVER_USER = credentials('SERVER_USER')
        SERVER_SSH_KEY = credentials('SERVER_SSH_KEY')
    }

    stages {
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy to Ubuntu Server') {
            steps {
                sshagent(credentials: ['SERVER_SSH_KEY']) {
                    sh """
                        scp -o StrictHostKeyChecking=no backend/target/*.jar ${SERVER_USER}@${SERVER_IP}:/opt/app/app.jar
                        scp -r -o StrictHostKeyChecking=no frontend/build/* ${SERVER_USER}@${SERVER_IP}:/var/www/html/
                        ssh -o StrictHostKeyChecking=no ${SERVER_USER}@${SERVER_IP} 'sudo systemctl restart apache2'
                    """
                }
            }
        }
    }
}