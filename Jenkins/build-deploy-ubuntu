pipeline {
    agent any
 
    environment {
        SERVER_IP = '127.0.0.1'
    }

    stages {
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy to Ubuntu Server') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-key', keyFileVariable: 'MY_SSH_KEY', usernameVariable:'username')])
                sh """
                    scp -i $MY_SSH_KEY -o StrictHostKeyChecking=no backend/target/*.jar ${username}@${SERVER_IP}:/opt/app/
                    scp -i $MY_SSH_KEY -r -o StrictHostKeyChecking=no frontend/build/* ${username}@${SERVER_IP}:/var/www/html/
                    ssh -i $MY_SSH_KEY -o StrictHostKeyChecking=no ${username}@${SERVER_IP} 'sudo systemctl restart apache2'
                """
            }
        }
    }
}